                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.monitor.widget.GothamBookFontForLable
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PR(bpm)"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/red"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp">
                                </com.monitor.widget.GothamBookFontForLable>

                                <com.monitor.widget.Gotham_Bold_Font
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="- -"
                                    android:id="@+id/pr"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_30sdp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/red"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="0dp">
                                </com.monitor.widget.Gotham_Bold_Font>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/lineWidth">

                    </View>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.monitor.widget.GothamBookFontForLable
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Temp(Celsius)"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/white"
                            android:layout_margin="5dp">
                        </com.monitor.widget.GothamBookFontForLable>

                        <com.monitor.widget.Gotham_Bold_Font
                            android:id="@+id/tvTEMPinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="- - "
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_30sdp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp">
                        </com.monitor.widget.Gotham_Bold_Font>
                    </LinearLayout>
                    <View
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/lineWidth">

                    </View>
                    <com.monitor.widget.GothamBookFontForLable
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RESP(bpm)"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/yallow"
                        android:layout_margin="5dp">
                    </com.monitor.widget.GothamBookFontForLable>
                    <com.monitor.widget.Gotham_Bold_Font
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- - "
                        android:textSize="@dimen/_30sdp"
                        android:id="@+id/resp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@color/yallow"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp">
                    </com.monitor.widget.Gotham_Bold_Font>


                </LinearLayout>
                <View

                    android:background="@color/white"
                    android:layout_width="@dimen/lineWidth"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1.35"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/bluetooth"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/blutooth"
                            android:layout_marginVertical="10dp"
                            android:layout_width="50dp"
                            android:padding="10dp"
                            android:layout_height="40dp">

                        </ImageView>
                        <com.monitor.widget.GothamBookFontForLable
                            android:id="@+id/connect"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:text="Search devices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.monitor.widget.GothamBookFontForLable>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/add"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/alarm"
                            android:layout_width="40dp"
                            android:padding="10dp"
                            android:layout_height="50dp">

                        </ImageView>
                        <com.monitor.widget.GothamBookFontForLable
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:text="Alert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.monitor.widget.GothamBookFontForLable>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pb"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/sphygmomanometer"
                            android:layout_width="40dp"
                            android:padding="10dp"
                            android:layout_height="50dp">

                        </ImageView>
                        <com.monitor.widget.GothamBookFontForLable
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="8dp"
                            android:text="@string/bp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.monitor.widget.GothamBookFontForLable>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/logout"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/discharge"
                            android:layout_width="50dp"
                            android:padding="10dp"
                            android:layout_height="40dp">

                        </ImageView>
                        <com.monitor.widget.GothamBookFontForLable
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="8dp"
                            android:text="@string/discharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.monitor.widget.GothamBookFontForLable>
                    </LinearLayout>
                </LinearLayout>




